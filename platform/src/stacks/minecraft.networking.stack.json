{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "AvailabilityZone": {
      "Type": "String",
      "Description": "Availability Zone"
    },
    "MineDeployLoadBalancerName": {
      "Type": "String",
      "Description": "Load Balancer Name"
    }
  },
  "Resources": {
    "MineDeployVPC": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": "10.0.0.0/16"
      }
    },
    "MineDeployInternetGateway": {
      "Type": "AWS::EC2::InternetGateway"
    },
    "MineDeployInternetGatewayAttachment": {
      "Type": "AWS::EC2::VPCGatewayAttachment",
      "Properties": {
        "VpcId": {
          "Ref": "MineDeployVPC"
        },
        "InternetGatewayId": {
          "Ref": "MineDeployInternetGateway"
        }
      }
    },
    "MineDeployRouteTable": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": {
          "Ref": "MineDeployVPC"
        }
      }
    },
    "MineDeployRoute": {
      "Type": "AWS::EC2::Route",
      "DependsOn": "MineDeployInternetGatewayAttachment",
      "Properties": {
        "DestinationCidrBlock": "0.0.0.0/0",
        "GatewayId": {
          "Ref": "MineDeployInternetGateway"
        },
        "RouteTableId": {
          "Ref": "MineDeployRouteTable"
        }
      }
    },
    "MineDeploySubnet": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": {
          "Ref": "AvailabilityZone"
        },
        "CidrBlock": "10.0.0.0/16",
        "MapPublicIpOnLaunch": true,
        "VpcId": {
          "Ref": "MineDeployVPC"
        }
      }
    },
    "MineDeploySubnetRouteTableAssociation": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "RouteTableId": {
          "Ref": "MineDeployRouteTable"
        },
        "SubnetId": {
          "Ref": "MineDeploySubnet"
        }
      }
    },
    "MineDeployLoadBalancer": {
      "Type": "AWS::ElasticLoadBalancingV2::LoadBalancer",
      "Properties": {
        "IpAddressType": "ipv4",
        "Scheme": "internet-facing",
        "Name": {
          "Ref": "MineDeployLoadBalancerName"
        },
        "Subnets": [
          {
            "Ref": "MineDeploySubnet"
          }
        ],
        "Type": "network"
      }
    },
    "MineDeployLoadBalancerListener": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "DefaultActions": [
          {
            "TargetGroupArn": {
              "Ref": "MineDeployLoadBalancerTargetGroup"
            },
            "Type": "forward"
          }
        ],
        "LoadBalancerArn": {
          "Ref": "MineDeployLoadBalancer"
        },
        "Port": 25565,
        "Protocol": "TCP"
      }
    },
    "MineDeployLoadBalancerTargetGroup": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Properties": {
        "Port": 25565,
        "Protocol": "TCP",
        "VpcId": {
          "Ref": "MineDeployVPC"
        }
      }
    }
  },
  "Outputs": {
    "MineDeployVPC": {
      "Description": "Mine Deploy VPC",
      "Value": {
        "Ref": "MineDeployVPC"
      }
    },
    "MineDeploySubnet": {
      "Description": "Mine Deploy Subnet",
      "Value": {
        "Ref": "MineDeploySubnet"
      }
    },
    "MineDeployLoadBalancer": {
      "Description": "Mine Deploy Load Balancer",
      "Value": {
        "Ref": "MineDeployLoadBalancer"
      }
    },
    "MineDeployLoadBalancerTargetGroup": {
      "Description": "Mine Deploy Load Balancer Target Group",
      "Value": {
        "Ref": "MineDeployLoadBalancerTargetGroup"
      }
    },
    "MineDeployLoadBalancerURL": {
      "Description": "Mine Deploy Load Balancer DNS NAME",
      "Value": {
        "Fn::GetAtt": ["MineDeployLoadBalancer", "DNSName"]
      }
    },
    "LoadBalancerHostedZoneId": {
      "Description": "Load Balancer Hosted Zone ID",
      "Value": {
        "Fn::GetAtt": ["MineDeployLoadBalancer", "CanonicalHostedZoneID"]
      }
    }
  }
}
