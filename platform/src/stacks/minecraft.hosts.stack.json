{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "HostName": {
      "Type": "String",
      "Description": "Hostname"
    }
  },
  "Resources": {
    "HostedZone": {
      "Type": "AWS::Route53::HostedZone",
      "Properties": {
        "Name": {
          "Ref": "HostName"
        }
      }
    },
    "RecordSetGroup": {
      "Type": "AWS::Route53::RecordSetGroup",
      "Properties": {
        "HostedZoneId": {
          "Ref": "HostedZone"
        },
        "RecordSets": [
          {
            "AliasTarget": {
              "DNSName": {
                "Fn::GetAtt": [
                  "MyECSService",
                  "DomainName"
                ]
              },
              "HostedZoneId": "Z2FDTNDATAQYW2"
            },
            "Name": {
              "Ref": "HostName"
            },
            "Type": "A"
          }
        ]
      }
    }
  }
}
